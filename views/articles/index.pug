extends ../layout

block content
  script(src="/js/index.js")
  div(class="container")
    div(class="row")
      div(class="col-md-6 col-md-offset-3 col-sm-8 col-sm-offset-2")
        h2 Uploaded Articles (#{articles.length})
        div
          table(class="table table-hover")
            tr
              th Name
            each article in articles
              tr
                td
                  a(href="/uploads/" + article.filename)=article.originalname
